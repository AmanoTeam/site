---
import { Picture } from "astro:assets";

const { src } = Astro.props;
const { alt } = Astro.props;
---

<Picture
  src={src}
  alt={alt}
  quality="max"
  formats={["avif", "webp"]}
  width="640"
/>

<style>
  img {
    box-shadow: 0 0 5px #3339;
    border-radius: 100%;
    border-color: #eee;
    border-style: solid;
    border-width: 3px;
  }

  picture {
    width: 42%;
    margin-bottom: 20px;
  }
</style>
