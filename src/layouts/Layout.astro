---
export interface Props {
  title: string;
}

const { title } = Astro.props;

import pngFavicon from "../img/favicon.png";
import svgFavicon from "../img/favicon.svg";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <meta name="theme-color" content="#111111" />

    <link rel="icon" href={svgFavicon.src} type="image/svg+xml" />
    <link rel="icon" href={pngFavicon.src} type="image/png" />

    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  :root {
    scrollbar-width: thin;
    scrollbar-color: #252525 #151515;
  }

  ::-webkit-scrollbar {
    background: #151515;
    width: 6px;
  }

  ::-webkit-scrollbar-thumb {
    background: #252525;
    border-radius: 2px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #303030;
  }
</style>
