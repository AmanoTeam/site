---
import "@fontsource/roboto/400.css";
import "@fontsource/roboto/500.css";
import "@fontsource/roboto/700.css";

import AmanobotLogo from "../img/projects/Amanobot.webp";
import Brdotml from "../img/projects/brdotml.webp";
import Customgram from "../img/projects/Customgram.webp";
import Duckpy from "../img/projects/Duckpy.webp";
import EduuRobot from "../img/projects/EduuRobot.webp";
import InfoPlaca from "../img/projects/InfoPlaca.webp";
import LyricsPy from "../img/projects/LyricsPy.webp";
import PyKorone from "../img/projects/PyKorone.webp";
import UserLixo from "../img/projects/UserLixo.webp";
import ProjectPicture from "../components/ProjectPicture.astro";
import ModalProjectPicture from "../components/ModalProjectPicture.astro";
import Drawer from "../layouts/Drawer.astro";
---

<script src="../ts/main"></script>

<Drawer title="Home | Amano LLC">
  <!-- Main header -->
  <div id="main-header-bg" class="h-screen w-screen fixed -z-10"></div>
  <div class="flex h-screen">
    <div class="m-auto text-center">
      <h1 class="mb-12 text-4xl">
        <b>We are a team of Developers and Designers</b>
      </h1>
      <a class="main-btn" href="#about"><i class="fas fa-chevron-down"></i></a>
    </div>
  </div>

  <!-- About us section -->
  <div id="about" class="bg-neutral-900 flex h-screen">
    <div class="m-auto text-center container">
      <h2 class="mb-12 text-3xl font-medium">About us</h2>
      <h4>
        <p class="mb-2 text-2xl">
          Our team was founded on January 2018 by <a href="https://alisson.sh"
            >Alisson</a
          > and <a href="https://eduu.ga">Eduardo</a>.
        </p>
        <p class="mb-2 text-2xl">
          One of our first projects was <a href="https://t.me/EduuRobot"
            >@EduuRobot</a
          >. It was initially designed to be a group admin bot on a group
          created by Eduardo. After some days, we saw that a group
          administration bot was a great idea, so we made the bot public for
          everyone.
        </p>
        <p class="mb-12 text-2xl">
          After EduuRobot, we started many other projects, most of them open
          source. You can see some of these projects below.
        </p>
      </h4>
      <a class="main-btn" href="#projects"
        ><i class="fas fa-chevron-down"></i></a
      >
    </div>
  </div>

  <!-- Projects section -->
  <div id="projects" class="bg-neutral-800 py-12">
    <h2 class="text-center my-6 text-3xl font-medium">Our projects</h2>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 container mx-auto"
    >
      <!-- Amanobot -->
      <div class="text-center">
        <a id="amanobot-a" href="#amanobot-modal">
          <div class="flex flex-col items-center mt-5">
            <ProjectPicture src={AmanobotLogo} alt="Amanobot logo" />
            <h4 class="text-2xl font-bold mt-2">Amanobot</h4>
            <p>Python Framework for Telegram bot API.</p>
          </div>
        </a>
        <div id="amanobot-modal">
          <div class="modal-content">
            <div class="close-amanobot-modal modal-close">
              <i class="fas fa-times"></i>
            </div>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
              <div class="flex flex-col items-center mb-5">
                <ModalProjectPicture src={AmanobotLogo} alt="Amanobot logo" />
                <h1 class="text-4xl font-bold mt-2">Amanobot</h1>
                <p class="font-bold">Python Framework for Telegram bot API.</p>
                <div class="flex space-x-2 mt-2">
                  <a class="project-button" href="https://docs.amanobot.ml">
                    <i class="fas fa-book"></i>
                  </a>
                  <a
                    class="project-button"
                    href="https://github.com/AmanoTeam/amanobot"
                  >
                    <i class="fab fa-github"></i>
                  </a>
                  <a
                    class="project-button"
                    href="https://pypi.org/project/amanobot"
                  >
                    <i class="fab fa-python"></i>
                  </a>
                </div>
              </div>
              <div class="project-desc">
                <p>
                  Amanobot is a Telegram bot API framework forked from the (now
                  discontinued) Telepot project.<br />
                  It aims to keep backwards-compatible with Telepot projects while
                  being updated frequently with modern Telegram bot API features.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- brdotml -->
      <div class="text-center">
        <a id="brdotml-a" href="#brdotml-modal">
          <div class="flex flex-col items-center mt-5">
            <ProjectPicture src={Brdotml} alt="Brdotml logo" />
            <h4 class="text-2xl font-bold mt-2">ðŸ‡§ðŸ‡·.ml (brdotml)</h4>
            <p>A Simple PHP URL shortener.</p>
          </div>
        </a>
        <div id="brdotml-modal">
          <div class="modal-content">
            <div class="close-brdotml-modal modal-close">
              <i class="fas fa-times"></i>
            </div>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
              <div class="flex flex-col items-center mb-5">
                <ModalProjectPicture src={Brdotml} alt="Brdotml logo" />
                <h1 class="text-4xl font-bold mt-2">ðŸ‡§ðŸ‡·.ml (brdotml)</h1>
                <p class="font-bold">A Simple PHP URL shortener.</p>
                <div class="flex space-x-2 mt-2">
                  <a class="project-button" href="https://ðŸ‡§ðŸ‡·.ml/docs">
                    <i class="fas fa-book"></i>
                  </a>
                  <a
                    class="project-button"
                    href="https://github.com/AmanoTeam/brdotml"
                  >
                    <i class="fab fa-github"></i>
                  </a>
                  <a class="project-button" href="https://ðŸ‡§ðŸ‡·.ml">
                    <i class="fas fa-globe"></i>
                  </a>
                </div>
              </div>
              <div class="project-desc">
                <p>
                  ðŸ‡§ðŸ‡·.ml is a simple URL shortener written in PHP that me
                  (Alisson) made just for learning.<br />
                  It is planned to be rewriten it in Python sometime in the future.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- customgram -->
      <div class="text-center">
        <a id="customgram-a" href="#customgram-modal">
          <div class="flex flex-col items-center mt-5">
            <ProjectPicture src={Customgram} alt="Customgram logo" />
            <h4 class="text-2xl font-bold mt-2">Customgram</h4>
            <p>An Unofficial Telegram client.</p>
