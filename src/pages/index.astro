  }

  a[href]:hover:not(.nav-link):not(a[href^="#"]) {
    color: #5a95f5;
  }

  div.projects > div > a[href] {
    color: var(--bs-body-color);
    text-decoration: none;
  }

  .footer-copyright {
    background-color: rgba(0, 0, 0, 0.2);
  }
</style>
