---
import { Picture } from 'astro:assets';

import "@fontsource/roboto/400.css";
import "@fontsource/roboto/500.css";
import "@fontsource/roboto/700.css";

import "../scss/stripped-bootstrap.scss";

import Layout from "../layouts/Layout.astro";

import HeaderLight from "../img/header_light.svg"

import AmanobotLogo from "../img/projects/Amanobot.webp"
import Brdotml from "../img/projects/brdotml.webp"
import Customgram from "../img/projects/Customgram.webp"
import Duckpy from "../img/projects/Duckpy.webp"
import EduuRobot from "../img/projects/EduuRobot.webp"
import InfoPlaca from "../img/projects/InfoPlaca.webp"
import LyricsPy from "../img/projects/LyricsPy.webp"
import PyKorone from "../img/projects/PyKorone.webp"
import UserLixo from "../img/projects/UserLixo.webp"
import ProjectPicture from '../components/ProjectPicture.astro';
import ModalProjectPicture from '../components/ModalProjectPicture.astro';
---

<script src="../ts/main"></script>

<Layout title="Home | Amano LLC">
  <!-- Navbar -->
  <nav
    id="mainNav"
    class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark transparent-navbar"
  >
    <div class="container">
      <button
        id="menu-toggle"
        class="navbar-toggler collapsed"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbar"
        aria-controls="navbar"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <i class="fas fa-bars"></i>
      </button>

      <a href="#top"><Picture class="navbar-brand" src={HeaderLight} alt="Amano logo" /></a>

      <div class="collapse navbar-collapse" id="navbar">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="#top">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#projects">Projects</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#contact">Contact</a>
          </li>
        </ul>

        <ul class="navbar-nav ms-md-auto">
          <li class="nav-item">
            <a
              data-toggle="tooltip"
              title="GitHub"
              class="nav-link"
              href="https://github.com/AmanoTeam"
            >
              <i class="fab fa-github"></i>
              <span class="navbar-icon-text">GitHub</span>
            </a>
          </li>
          <li class="nav-item">
            <a
              data-toggle="tooltip"
              title="GitLab"
              class="nav-link"
              href="https://gitlab.com/AmanoTeam"
            >
              <i class="fab fa-gitlab"></i>
              <span class="navbar-icon-text">GitLab</span>
            </a>
          </li>
          <li class="nav-item">
            <a
              data-toggle="tooltip"
              title="Telegram"
              class="nav-link"
              href="https://t.me/s/AmanoTeam"
            >
              <i class="fab fa-telegram-plane"></i>
              <span class="navbar-icon-text">Telegram</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main header -->
  <div id="main-header-bg"></div>
  <div class="d-flex justify-content-center align-items-center full-height">
    <div class="text-center">
      <h1 class="mb-5"><b>We are a team of Developers and Designers</b></h1>
      <a class="main-btn" href="#about"><i class="fas fa-chevron-down"></i></a>
    </div>
  </div>

  <!-- About us section -->
  <div id="about" class="bg-dark d-flex align-items-center full-height">
    <div class="text-center container">
      <h2 class="mb-5">About us</h2>
      <h4>
        <p class="mb-2">
          Our team was founded on January 2018 by <a href="https://alisson.sh"
            >Alisson</a
          > and <a href="https://eduu.ga">Eduardo</a>.
        </p>
        <p class="mb-2">
          One of our first projects was <a href="https://t.me/EduuRobot"
            >@EduuRobot</a
          >. It was initially designed to be a group admin bot on a group
          created by Eduardo. After some days, we saw that a group
          administration bot was a great idea, so we made the bot public for
          everyone.
        </p>
        <p class="mb-5">
          After EduuRobot, we started many other projects, most of them open
          source. You can see some of these projects below.
        </p>
      </h4>
      <a class="main-btn" href="#projects"
        ><i class="fas fa-chevron-down"></i></a
      >
    </div>
  </div>

  <!-- Projects section -->
  <div id="projects" class="projects-bg py-5">
    <h2 class="text-center my-4">Our projects</h2>
    <div class="row mx-auto projects container">
      <!-- Amanobot -->
      <div class="col-lg-3 col-md-6 sr-item text-center">
        <a id="amanobot-a" href="#amanobot-modal">
          <div class="service-box mt-5">
            <ProjectPicture src={AmanobotLogo} alt="Amanobot logo" />
            <h4>Amanobot</h4>
            <p>Python Framework for Telegram bot API.</p>
          </div>
        </a>
        <div id="amanobot-modal">
          <div class="modal-content">
            <div class="close-amanobot-modal modal-close">
              <i class="fas fa-xmark"></i>
            </div>

            <div class="row project">
              <div class="col-lg-6 mb-5 mb-lg-5 project-col">
                <ModalProjectPicture src={AmanobotLogo} alt="Amanobot logo" />
                <h1><b>Amanobot</b></h1>
                <p><b>Python Framework for Telegram bot API.</b></p>
                <div>
                  <a class="project-button" href="https://docs.amanobot.ml">
                    <i class="fas fa-book"></i>
                  </a>
                  <a
                    class="project-button"
                    href="https://github.com/AmanoTeam/amanobot"
                  >
                    <i class="fab fa-github"></i>
                  </a>
                  <a
                    class="project-button"
                    href="https://pypi.org/project/amanobot"
                  >
                    <i class="fab fa-python"></i>
                  </a>
                </div>
              </div>
              <div class="col-lg-6 project-col project-desc">
                <p>
                  Amanobot is a Telegram bot API framework forked from the (now
                  discontinued) Telepot project.<br />
                  It aims to keep backwards-compatible with Telepot projects while
                  being updated frequently with modern Telegram bot API features.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- brdotml -->
      <div class="col-lg-3 col-md-6 sr-item text-center">
        <a id="brdotml-a" href="#brdotml-modal">
          <div class="service-box mt-5">
