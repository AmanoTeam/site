        title="UserLixo"
        logoSrc={UserLixoLogo}
        bgColor="#8C5AD3"
        description="Multipurpose Python userbot for Telegram."
        modalAdditionalInfo="UserLixo is a modular Python userbot for Telegram."
        githubLink="https://github.com/AmanoTeam/UserLixo"
        telegramLink="https://t.me/UserLixo"
        newsLink="https://t.me/UserLixo"
      />

      <!-- Unu -->
