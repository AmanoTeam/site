  }

  .project-button:hover {
    box-shadow: 0 0 5px #3339;
  }

  .project-button > svg {
    font-size: 20px;
    margin: 10px;
  }

  .modal-close {
    display: flex;
    justify-content: center;
    margin-top: 48px;
    margin-bottom: 64px;
    position: relative;
  }

  .modal-close > svg {
    text-shadow: 0 0 1px #0006;
    transition: all 0.15s;
    font-size: 30pt;
    cursor: default;
  }

  .modal-close:hover > svg {
    color: #fbb;
    transition: all 0.15s;
  }

  .main-btn > svg,
  .main-btn > i {
    display: inline-block;
    vertical-align: middle;
    height: 20pt;
  }

  .main-btn:not(:hover) > svg {
    color: var(--bs-body-color);
  }

  .modal-content {
    color: #eee;
    background: #0000;
    border-style: none;
  }

  .modal-content p {
    font-size: 15pt;
  }

  .project-desc {
    text-align: initial;
  }

  .project-desc p {
    font-size: 22pt;
