  }

  ::-webkit-scrollbar {
    background: #151515;
    width: 6px;
  }

  ::-webkit-scrollbar-thumb {
    background: #252525;
    border-radius: 2px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #303030;
  }

  .section-title {
    font-weight: 500;
  }

  .project-desc > ul {
    font-size: 15pt;
  }

  .project-button {
    display: inline-block;
